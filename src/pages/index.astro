---
import Layout from '../layouts/Layout.astro';
import FlockingDemo from '../components/FlockingDemo.astro';
---

<Layout title="Home">
  <div class="home-layout">
    <!-- Welcome Window -->
    <div class="window welcome-window">
      <div class="window-title">
        <span class="window-title-text">
          <span>üìÅ</span>
          Welcome to Flocc
        </span>
        <div class="window-controls">
          <span class="window-btn">‚îÄ</span>
          <span class="window-btn">‚ñ°</span>
          <span class="window-btn">√ó</span>
        </div>
      </div>
      <div class="window-content">
        <div class="welcome-content">
          <div class="logo-section">
            <div class="logo-icon">üê¶</div>
            <h1>Flocc</h1>
            <p class="version">Version 0.6.2</p>
          </div>
          
          <div class="divider"></div>
          
          <p class="tagline">Agent-based modeling in JavaScript</p>
          
          <p class="description">
            Build complex simulations with simple rules. Create flocking behaviors, 
            cellular automata, network models, and explore emergent phenomena.
          </p>

          <div class="button-row">
            <a href="/examples" class="btn">
              <span>üìÇ</span> Browse Examples
            </a>
            <a href="https://flocc.network/docs" target="_blank" class="btn">
              <span>üìñ</span> Documentation
            </a>
            <a href="https://github.com/scottpdo/flocc" target="_blank" class="btn">
              <span>üíæ</span> Source Code
            </a>
          </div>
        </div>
      </div>
      <div class="status-bar">
        <div class="status-bar-item">Ready</div>
        <div class="status-bar-item" style="flex: 0; min-width: 100px;">MIT License</div>
      </div>
    </div>

    <!-- Demo Window -->
    <div class="window demo-window">
      <div class="window-title">
        <span class="window-title-text">
          <span>üé¨</span>
          flocking_demo.exe
        </span>
        <div class="window-controls">
          <span class="window-btn">‚îÄ</span>
          <span class="window-btn">‚ñ°</span>
          <span class="window-btn">√ó</span>
        </div>
      </div>
      <div class="window-content no-padding">
        <div class="demo-container">
          <FlockingDemo />
        </div>
      </div>
      <div class="status-bar">
        <div class="status-bar-item">Interactive demo - move your mouse to push agents along</div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .home-layout {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 16px;
    max-width: 1200px;
    margin: 0 auto;
    min-height: calc(100vh - 80px);
    align-items: start;
  }

  .welcome-window {
    position: sticky;
    top: 16px;
  }

  .welcome-content {
    text-align: center;
  }

  .logo-section {
    padding: 16px 0;
  }

  .logo-icon {
    font-size: 48px;
    margin-bottom: 8px;
  }

  .welcome-content h1 {
    font-family: var(--font-display);
    font-size: 48px;
    font-weight: normal;
    color: var(--win-navy);
    margin: 0;
    letter-spacing: 2px;
  }

  .version {
    font-size: 13px;
    color: var(--win-gray-dark);
    margin-top: 4px;
  }

  .divider {
    height: 2px;
    background: var(--win-gray-dark);
    box-shadow: 0 1px 0 var(--win-white);
    margin: 12px 0;
  }

  .tagline {
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 12px;
  }

  .description {
    font-size: 14px;
    line-height: 1.5;
    color: var(--win-black);
    margin-bottom: 16px;
    text-align: left;
    padding: 8px;
    background: var(--win-white);
    box-shadow: var(--border-sunken);
  }

  .button-row {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .button-row .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
  }

  .demo-window {
    min-height: 500px;
  }

  .demo-container {
    background: #000;
    min-height: 450px;
  }

  @media (max-width: 900px) {
    .home-layout {
      grid-template-columns: 1fr;
    }

    .welcome-window {
      position: static;
    }

    .demo-container {
      min-height: 300px;
    }
  }
</style>
