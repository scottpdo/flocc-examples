---
import Layout from '../layouts/Layout.astro';
import FlockingDemo from '../components/FlockingDemo.astro';
---

<Layout title="Home">
  <section class="hero">
    <div class="hero-content">
      <h1>Flocc</h1>
      <p class="tagline">Agent-based modeling in JavaScript</p>
      <p class="description">
        Build complex simulations with simple rules. Flocc makes it easy to create 
        flocking behaviors, cellular automata, network models, and more.
      </p>
      <div class="cta">
        <a href="/examples" class="button primary">Explore Examples</a>
        <a href="https://flocc.network/docs" class="button secondary" target="_blank">Documentation</a>
      </div>
    </div>
    <div class="hero-demo">
      <FlockingDemo />
    </div>
  </section>
</Layout>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: calc(100vh - 200px);
  }

  .hero-content h1 {
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    max-width: 500px;
    margin-bottom: 2rem;
  }

  .cta {
    display: flex;
    gap: 1rem;
  }

  .button {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.2s;
  }

  .button.primary {
    background: var(--color-accent);
    color: white;
  }

  .button.primary:hover {
    background: #2563eb;
    text-decoration: none;
  }

  .button.secondary {
    background: var(--color-surface);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .button.secondary:hover {
    background: var(--color-border);
    text-decoration: none;
  }

  .hero-demo {
    background: var(--color-surface);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .hero-content h1 {
      font-size: 3rem;
    }
  }
</style>
